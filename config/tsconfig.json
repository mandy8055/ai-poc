{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "../build",
    "rootDir": "../src/data",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../src",
    "paths": {
      "*": ["data/*"]
    }
  },
  "include": ["../src/data/**/*.ts"]
}
